<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_schedule_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:text="Schedule"
        android:textSize="25sp"
        android:fontFamily="sans-serif-black"/>

    <EditText
        android:id="@+id/edit_text_schedule_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_schedule_page_title"
        android:hint="Title"/>

    <EditText
        android:id="@+id/edit_text_schedule_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_schedule_title"
        android:hint="Date"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--
        I commented this cause the app was crashing, Atanas
         <EditText
            android:layout_width=""
            android:layout_height=""
        -->
    </LinearLayout>



</RelativeLayout>